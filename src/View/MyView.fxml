<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import View.MazeDisplayer?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MyViewController">
   <children>
      <BorderPane onKeyPressed="#KeyPressed" prefHeight="400.0" prefWidth="600.0">
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem mnemonicParsing="false" text="New" />
                        <MenuItem mnemonicParsing="false" text="Load" />
                    <MenuItem mnemonicParsing="false" onAction="#saveGame" text="Save" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Options">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Exit">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#exitGame" text="Save And Exit" />
                        <MenuItem mnemonicParsing="false" onAction="#exitGame" text="Exit Without Saving" />
                    </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
         <left>
            <Pane prefHeight="293.0" prefWidth="141.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id = "solve" layoutX="48.0" layoutY="29.0" mnemonicParsing="false" text="Solve" onAction="#solveMaze"/>
                  <Button fx:id = "restart" layoutX="44.0" layoutY="66.0" mnemonicParsing="false" text="Restart" onAction="#restart" />
               </children>
            </Pane>
         </left>
         <center>
            <Pane prefHeight="303.0" prefWidth="459.0" BorderPane.alignment="CENTER">
                <children>
                    <MazeDisplayer fx:id="mazeDisplayer" height="600.0" width="600.0"
                                   imageFileNameWall="resources/Images/wall1.jpg"
                                   imageFileNameCharacter1 = "resources/Images/netta.jpeg"
                                   imageFileNameCharacter2 ="resources/Images/Dana.jpg"
                                   imageFileNameCharacter3 ="resources/Images/Gali.jpg"
                                   imageFileNameCharacter4 ="resources/Images/Izhar.jpg"
                                   imageFileNameStartAndGoal="resources/Images/Trophy.jpg"
                                   imageFileNameSolution = "resources/Images/note.png"
                    />
                </children>

               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Pane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
